<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical" >

    <com.application.ui.view.ObservableRecyclerView
        android:id="@+id/dialogThemeListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="48dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/dialogThemeListSubmitTv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/button_apply"
        android:textColor="@color/drawer_item_title"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:gravity="left|center"
        android:padding="2dp"
        android:text="@string/sample_fragment_settings_dialog_theme_title"
        android:textColor="@color/toolbar_background"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

</FrameLayout>