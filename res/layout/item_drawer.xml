<?xml version="1.0" encoding="utf-8"?>
<com.application.ui.view.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:layout_alignParentBottom="true"
    android:paddingLeft="@dimen/drawer_item_padding_left"
    android:paddingRight="@dimen/drawer_item_padding_right"
    ripple:mrl_rippleAlpha="@dimen/rippleAlpha"
    ripple:mrl_rippleBackground="@android:color/transparent"
    ripple:mrl_rippleColor="@android:color/darker_gray"
    ripple:mrl_rippleHover="true"
    ripple:mrl_rippleOverlay="true"
    tools:ignore="RtlHardcoded" >

    <RelativeLayout
        android:id="@+id/drawerItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/drawerItemIv"
            android:layout_width="@dimen/drawer_item_image_width"
            android:layout_height="@dimen/drawer_item_image_width"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home_sync"
            tools:ignore="ContentDescription" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/drawerItemReadCountTv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/shape_toolbar_unread_counter"
            android:gravity="center"
            android:text="@string/textview_unread"
            android:textColor="@android:color/white"
            android:textSize="@dimen/drawer_item_profile_email_text_size"
            android:visibility="gone"
            tools:ignore="RtlHardcoded" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/drawerItemTitleTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/drawerItemIv"
            android:gravity="left|center"
            android:singleLine="true"
            android:text="@string/textview_last_sync"
            android:textColor="@color/toolbar_background"
            android:textSize="@dimen/drawer_item_last_sync_text_size"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

</com.application.ui.view.MaterialRippleLayout>