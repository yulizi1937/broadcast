<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include layout="@layout/toolbar_plain_simple" />

    <include layout="@layout/toolbar_shadow" />

    <include layout="@layout/include_crouton_handle" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include layout="@layout/fragment_parichay_detail" />

        <com.application.ui.view.FloatingActionButton
            android:id="@+id/activityParichayDetailFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_refer"
            fab:fab_colorNormal="@color/toolbar_background"
            fab:fab_colorPressed="@color/item_transparent_color"
            fab:fab_colorRipple="@color/transparency_event_cover"
            tools:ignore="RtlHardcoded" />
    </FrameLayout>

</LinearLayout>