<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:discreteseekbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fadingEdge="none"
    android:orientation="vertical" >

    <VideoView
        android:id="@+id/fragmentVideoFullScreenVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/fragmentVideoFullScreenVideoPauseIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_pause_video"
        android:visibility="gone"
        tools:ignore="ContentDescription" />
    
    <ImageView
        android:id="@+id/fragmentVideoFullScreenVideoPlayIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_play_video"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/fragmentVideoFullScreenMediaControllerLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom|center"
        android:background="@color/black_shade_light"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone" >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragmentVideoFullScreenMediaControllerCurrentPositionTv"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:gravity="start|center"
            android:text="@string/sample_audio_detail_seekbar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/event_title_textview_size"
            android:textStyle="normal" />

        <com.application.ui.view.DiscreteSeekBar
            android:id="@+id/fragmentVideoFullScreenMediaControllerSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="64dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="64dp"
            android:layout_marginStart="40dp"
            discreteseekbar:dsb_max="5"
            discreteseekbar:dsb_min="0"
            discreteseekbar:dsb_value="1" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragmentVideoFullScreenMediaControllerTotalPositionTv"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:gravity="start|center"
            android:text="@string/sample_audio_detail_seekbar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/event_title_textview_size"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/fragmentVideoFullScreenMediaControllerFullScreenIv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_exit_fullscreen"
            tools:ignore="ContentDescription" />
    </FrameLayout>

</FrameLayout>