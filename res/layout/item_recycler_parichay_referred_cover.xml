<?xml version="1.0" encoding="utf-8"?>
<com.application.ui.view.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
    xmlns:progresswheel="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    ripple:mrl_rippleAlpha="@dimen/rippleAlpha"
    ripple:mrl_rippleBackground="@android:color/transparent"
    ripple:mrl_rippleColor="@android:color/darker_gray"
    ripple:mrl_rippleHover="true"
    ripple:mrl_rippleOverlay="true" >

    <FrameLayout
        android:id="@+id/itemRecyclerParichayCoverRootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_recycler_parichay_cover_height"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_parichay_progress_cover"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/itemRecyclerParichayCoverImageBgView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_recycler_parichay_cover_height"
            android:background="@color/background_tab_pressed" />

        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_round_white_bg" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/itemRecyclerParichayCandidatesSequenceTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/sample_parichay_sequence"
                android:textColor="@color/item_description_color"
                android:textSize="@dimen/item_recycler_parichay_cover_textsize"
                android:textStyle="bold" />
        </FrameLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/itemRecyclerParichayCandidatesReferredTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="@string/sample_parichay_candidates_referred"
            android:textColor="@android:color/white"
            android:textSize="@dimen/item_recycler_parichay_candidatesreferred_for_textsize"
            android:textStyle="bold" />
    </FrameLayout>

</com.application.ui.view.MaterialRippleLayout>