<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:numberprogressbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/shape_download_dialog_card"
        android:orientation="vertical"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/dialogProgressDownloadIv"
            android:layout_width="@dimen/dialog_progress_download_icon_width"
            android:layout_height="@dimen/dialog_progress_download_icon_height"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/dialog_progress_message_padding"
            android:scaleType="centerInside"
            android:src="@drawable/ic_item_audio"
            tools:ignore="ContentDescription" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dialogProgressDownloadNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dialog_progress_download_padding"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/toolbar_background_statusbar"
            android:textSize="@dimen/dialog_progress_download_filename_size" />

        <com.application.ui.view.NumberProgressBar
            android:id="@+id/dialogProgressDownloadProgressBar"
            style="@style/NumberProgressBar_Grace_Yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dialog_progress_download_progressbar_padding"
            numberprogressbar:number_progress_current="0" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dialogProgressDownloadProgressTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_margin="@dimen/dialog_progress_download_padding"
            android:gravity="right"
            android:text="@string/app_name"
            android:textColor="@color/toolbar_background_statusbar"
            android:textSize="@dimen/dialog_progress_download_progress_size"
            android:visibility="visible"
            tools:ignore="RtlHardcoded" />
        
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dialogProgressDownloadFactsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dialog_progress_download_padding"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dialog_progress_download_filename_size"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/dialogProgressDownloadCancelBtn"
            android:layout_width="@dimen/dialog_progress_download_cancel_width"
            android:layout_height="@dimen/dialog_progress_download_cancel_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dialog_progress_download_cancel_margin_top"
            android:background="@drawable/shape_button_normal"
            android:gravity="center"
            android:text="@string/button_cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dialog_progress_download_cancel_text_size"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>