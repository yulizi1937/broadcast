<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circlepageindicator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/fragmentImageDetailFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_image_frame_height" >

            <ImageView
                android:id="@+id/fragmentImageDetailPreviousIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:scaleType="center"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fragmentImageDetailNextIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:scaleType="center"
                tools:ignore="ContentDescription" />

            <android.support.v4.view.ViewPager
                android:id="@+id/fragmentImageDetailViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.application.ui.view.CirclePageIndicator
                android:id="@+id/fragmentImageDetailCirclePageIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="16dp"
                circlepageindicator:centered="true"
                circlepageindicator:fillColor="@android:color/white"
                circlepageindicator:pageColor="@android:color/transparent"
                circlepageindicator:radius="3dp"
                circlepageindicator:strokeColor="@android:color/white"
                circlepageindicator:strokeWidth="1dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fragment_detail_padding" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragmentImageDetailTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="start|center"
                android:text="@string/sample_event_title"
                android:textColor="@color/toolbar_background"
                android:textSize="@dimen/event_title_textview_size"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/fragmentImageDetailByLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_detail_title_by_content_margin_top"
                android:orientation="horizontal" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentImageDetailByTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"
                    android:layout_marginRight="90dp"
                    android:background="@color/item_event_by"
                    android:gravity="left|center"
                    android:padding="4dp"
                    android:text="@string/sample_event_by"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/event_by_textview_size"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentImageDetailViewTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center"
                    android:background="@drawable/shape_rectange_app"
                    android:drawableLeft="@drawable/item_view"
                    android:gravity="right|center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="@string/sample_event_view"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/event_by_textview_size"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragmentImageDetailSummaryTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/fragment_detail_title_by_content_margin_top"
                android:gravity="start|center"
                android:text="@string/sample_event_summary"
                android:textColor="@color/toolbar_background"
                android:textSize="@dimen/event_detail_event_summary_size" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>