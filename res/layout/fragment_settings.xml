<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_color"
    android:fadingEdge="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/fragment_settings_card_margin_top" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragmentSettingsGeneralHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:text="@string/sample_fragment_settings_header_general"
                android:textColor="@color/drawer_item_title"
                android:textSize="@dimen/fragment_settings_header_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/drawer_item_title" />

            <LinearLayout
                android:id="@+id/fragmentSettingsGeneralLanguageLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_settings_relativelayout_height"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsGeneralLanguageTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_weight="2"
                    android:gravity="start|center"
                    android:text="@string/sample_fragment_settings_general_language_header"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsGeneralLanguageSelectedTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text="@string/sample_fragment_settings_general_language_text"
                    android:textColor="@color/drawer_item_title"
                    android:textSize="@dimen/fragment_settings_title_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/fragment_settings_card_margin_top" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragmentSettingsNotificationHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:text="@string/sample_fragment_settings_header_notification"
                android:textColor="@color/drawer_item_title"
                android:textSize="@dimen/fragment_settings_header_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/drawer_item_title" />

            <!-- android:layout_height="@dimen/fragment_settings_relativelayout_height" -->

            <LinearLayout
                android:id="@+id/fragmentSettingsNotificationBirthdayTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom"
                android:visibility="gone" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsNotificationBirthdayTimeTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_weight="2"
                    android:gravity="start|center"
                    android:text="@string/sample_fragment_settings_notification_birthday_time"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsNotificationBirthdayTimeSelectedTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text="@string/sample_fragment_settings_notification_birthday_time_text"
                    android:textColor="@color/toolbar_background"
                    android:textSize="@dimen/fragment_settings_title_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <!-- android:layout_height="@dimen/fragment_settings_relativelayout_height" -->

            <RelativeLayout
                android:id="@+id/fragmentSettingsNotificationBirthdayMuteLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_settings_relativelayout_height"
                android:clickable="true"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom"
                android:visibility="visible" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsNotificationBirthdayMuteTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="48dp"
                    android:gravity="start|center"
                    android:singleLine="false"
                    android:text="@string/sample_fragment_settings_notification_birthday_mute"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size"
                    tools:ignore="RtlHardcoded" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/fragmentSettingsNotificationBirthdayMuteCheckTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:checked="false"
                    android:gravity="end|center"
                    android:text=""
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/fragmentSettingsNotificationDownloadAndNotifyLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_settings_relativelayout_height"
                android:clickable="true"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsNotificationBirthdayDownloadAndNotifyTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="48dp"
                    android:gravity="start|center"
                    android:singleLine="false"
                    android:text="@string/sample_fragment_settings_notification_download_notify"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size"
                    tools:ignore="RtlHardcoded" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/fragmentSettingsNotificationDownloadAndNotifyCheckTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:checked="true"
                    android:gravity="end|center"
                    android:text=""
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/fragmentSettingsNotificationAnyDoNotificationLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_settings_relativelayout_height"
                android:clickable="true"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsNotificationAnyDoTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="48dp"
                    android:gravity="start|center"
                    android:singleLine="false"
                    android:text="@string/sample_fragment_settings_notification_anydo"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size"
                    tools:ignore="RtlHardcoded" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/fragmentSettingsNotificationAnyDoCheckTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:checked="true"
                    android:gravity="end|center"
                    android:text=""
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/fragment_settings_card_margin_top" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragmentSettingsSyncHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:text="@string/sample_fragment_settings_sync_notification"
                android:textColor="@color/drawer_item_title"
                android:textSize="@dimen/fragment_settings_header_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/drawer_item_title" />

            <LinearLayout
                android:id="@+id/fragmentSettingsSyncFrequencyLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_settings_relativelayout_height"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingssyncFrequencyTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_weight="2"
                    android:gravity="start|center"
                    android:text="@string/sample_fragment_settings_sync_frequency"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsSyncFrequencySelectedTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text="@string/sample_fragment_settings_sync_frquency_text"
                    android:textColor="@color/drawer_item_title"
                    android:textSize="@dimen/fragment_settings_title_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/fragment_settings_card_margin_top"
            android:visibility="visible" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragmentSettingsStyleHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:text="@string/sample_fragment_settings_style_notification"
                android:textColor="@color/drawer_item_title"
                android:textSize="@dimen/fragment_settings_header_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/drawer_item_title" />

            <LinearLayout
                android:id="@+id/fragmentSettingsStyleAppThemeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_settings_relativelayout_height"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom"
                android:visibility="visible" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsStyleAppThemeTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_weight="2"
                    android:gravity="start|center"
                    android:text="@string/sample_fragment_settings_style_themeapp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size" />

                <View
                    android:id="@+id/fragmentSettingsStyleAppThemeSelectedTv"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_gravity="end|center"
                    android:layout_weight="0.2"
                    android:background="@color/toolbar_background"
                    android:gravity="end|center"
                    android:textColor="@color/toolbar_background"
                    android:textSize="@dimen/fragment_settings_title_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragmentSettingsStyleTextFontLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom"
                android:visibility="gone" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsStyleTextFontTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_weight="2"
                    android:gravity="start|center"
                    android:text="@string/sample_fragment_settings_style_textfont"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsStyleTextFontSelectedTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text="@string/sample_fragment_settings_style_textfont_selected"
                    android:textColor="@color/toolbar_background"
                    android:textSize="@dimen/fragment_settings_title_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/fragment_settings_card_margin_top" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragmentSettingsAboutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:text="@string/sample_fragment_settings_header_about"
                android:textColor="@color/drawer_item_title"
                android:textSize="@dimen/fragment_settings_header_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/drawer_item_title" />

            <RelativeLayout
                android:id="@+id/fragmentSettingsNotificationAboutLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_settings_relativelayout_height"
                android:clickable="true"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentSettingsNotificationAboutTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="start|center"
                    android:singleLine="false"
                    android:text="@string/sample_fragment_settings_about_text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/fragmentAboutBuildVersionLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_settings_relativelayout_height"
                android:clickable="true"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentAboutBuildVersionTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="start|center"
                    android:singleLine="false"
                    android:text="@string/sample_fragment_settings_about_build_version_text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/fragmentAboutFileStorageLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_settings_relativelayout_height"
                android:clickable="true"
                android:paddingBottom="@dimen/fragment_settings_layout_padding_top_bottom"
                android:paddingTop="@dimen/fragment_settings_layout_padding_top_bottom" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragmentAboutFileStorageTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="start|center"
                    android:singleLine="false"
                    android:text="@string/sample_fragment_settings_about_file_storage_text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_settings_title_text_size"
                    tools:ignore="RtlHardcoded" />

                <LinearLayout
                    android:id="@+id/fragmentAboutFileStoragePercentageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_below="@id/fragmentAboutFileStorageTv"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/fragmentAboutFileStoragePercenetageAppTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/toolbar_background"
                        android:gravity="start|center"
                        android:paddingLeft="8dp"
                        android:text="@string/sample_fragment_settings_about_file_storage_text"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/fragment_settings_storage_text_size"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/fragmentAboutFileStoragePercenetageDeviceTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:gravity="end|center"
                        android:paddingRight="8dp"
                        android:singleLine="false"
                        android:text="@string/sample_fragment_settings_about_file_storage_text"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/fragment_settings_storage_text_size"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>