<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/widgetItemLayout"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/widgetRowImageView"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:scaleType="centerInside"
        tools:ignore="RtlHardcoded,ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="5"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded" >

        <TextView
            android:id="@+id/widgetRowTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="left|center"
            android:singleLine="true"
            android:text="@string/textview_login"
            android:textColor="@color/item_title_color"
            android:textSize="@dimen/widget_title_textview_size"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/widgetRowDescTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="left|center"
            android:singleLine="true"
            android:text="@string/textview_login"
            android:textColor="@color/item_description_color"
            android:textSize="@dimen/widget_desc_textview_size"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

</LinearLayout>