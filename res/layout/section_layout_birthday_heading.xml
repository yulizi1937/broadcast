<?xml version="1.0" encoding="utf-8"?>
<com.application.ui.view.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    ripple:mrl_rippleAlpha="0.1"
    ripple:mrl_rippleBackground="@color/toolbar_background"
    ripple:mrl_rippleColor="@android:color/darker_gray"
    ripple:mrl_rippleHover="true"
    ripple:mrl_rippleOverlay="true" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toolbar_background" >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sectionBirthdayHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="4dp"
            android:gravity="center"
            android:text="@string/sample_section_layout_birthday_header"
            android:textColor="@android:color/white"
            android:textSize="@dimen/birthday_section_header_textview_size"
            android:textStyle="bold" />
    </FrameLayout>

</com.application.ui.view.MaterialRippleLayout>