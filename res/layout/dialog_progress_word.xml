<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/dialogProgressWordIv"
        android:layout_width="@dimen/dialog_progress_message_icon_width"
        android:layout_height="@dimen/dialog_progress_message_icon_width"
        android:layout_gravity="top|center"
        android:layout_marginTop="@dimen/dialog_progress_message_padding"
        android:scaleType="centerInside"
        android:src="@drawable/splash_logo"
        tools:ignore="ContentDescription" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/dialogProgressWordTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dialog_progress_message_padding"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dialog_progress_message_size" />

</LinearLayout>