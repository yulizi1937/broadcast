<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circlepageindicator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fadingEdge="none"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/fragmentImageFullScreenPreviousIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start|center"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="center"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/fragmentImageFullScreenNextIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end|center"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="center"
        tools:ignore="ContentDescription" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fragmentImageFullScreenViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.application.ui.view.CirclePageIndicator
        android:id="@+id/fragmentImageFullScreenCirclePageIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        circlepageindicator:centered="true"
        circlepageindicator:fillColor="@android:color/white"
        circlepageindicator:pageColor="@android:color/transparent"
        circlepageindicator:radius="3dp"
        circlepageindicator:strokeColor="@android:color/white"
        circlepageindicator:strokeWidth="1dp" />

</FrameLayout>