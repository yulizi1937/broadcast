<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activitySplashLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar_background" >

    <ImageView
        android:id="@+id/activitySplashLogoIv"
        android:layout_width="@dimen/activity_splash_logo_width"
        android:layout_height="@dimen/activity_splash_logo_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/splash_logo"
        tools:ignore="ContentDescription" />

    <!-- <ImageView -->
    <!-- android:id="@+id/activitySplashPdfIv" -->
    <!-- android:layout_width="48dp" -->
    <!-- android:layout_height="48dp" -->
    <!-- android:layout_above="@id/activitySplashLogoIv" -->
    <!-- android:layout_centerHorizontal="true" -->
    <!-- android:scaleType="centerInside" -->
    <!-- android:src="@drawable/ic_item_pdf" -->
    <!-- android:visibility="gone" -->
    <!-- tools:ignore="ContentDescription" /> -->

    <com.application.ui.view.ShimmerFrameLayout
        android:id="@+id/activitySplashShimmerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        shimmer:shimmer_duration="1000" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/activitySplashAppNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_splash_appname_margin_bottom"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/activity_splash_appname_textsize" />
        </LinearLayout>
    </com.application.ui.view.ShimmerFrameLayout>

</FrameLayout>