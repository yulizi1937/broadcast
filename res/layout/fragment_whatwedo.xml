<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panningview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.application.ui.view.PanningView
        android:id="@+id/fragmentWhatWeDoIv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/whatwearebg1"
        panningview:panningDurationInMs="5000" />

    <ImageView
        android:id="@+id/fragmentWhatWeDoIv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/whatwearefg1" />

</FrameLayout>