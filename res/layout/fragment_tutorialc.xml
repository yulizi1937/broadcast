<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentTutorialCLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fragmentTutorialCHeaderTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/fragment_tutorial_header"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fragment_tutorial_header_text_size"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fragmentTutorialCFunctionalityTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/fragment_tutorial_functionality"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fragment_tutorial_functionality_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />

            <FrameLayout
                android:id="@+id/fragmentTutorialCFrameLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/shape_tutorial"
                android:paddingBottom="@dimen/fragment_tutorial_phone_padding_top_bottom"
                android:paddingLeft="@dimen/fragment_tutorial_phone_padding_left_right"
                android:paddingRight="@dimen/fragment_tutorial_phone_padding_left_right"
                android:paddingTop="@dimen/fragment_tutorial_phone_padding_top_bottom" >

                <ImageView
                    android:id="@+id/fragmentTutorialCScrollIv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|center"
                    android:contentDescription="@string/fragment_tutorial_header"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/fragmentTutorialCShareIv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_tutorial_share_height"
                    android:layout_gravity="bottom|center"
                    android:contentDescription="@string/fragment_tutorial_header"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/fragmentTutorialCPointerIv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center"
                    android:contentDescription="@string/fragment_tutorial_header"
                    android:scaleType="centerInside"
                    android:visibility="visible"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7" />
    </LinearLayout>

</LinearLayout>