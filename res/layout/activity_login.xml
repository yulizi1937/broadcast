<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circlepageindicator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_application"
    android:orientation="vertical" >

    <!-- <include layout="@layout/toolbar_plain" /> -->


    <!-- <include layout="@layout/toolbar_shadow" /> -->

    <include layout="@layout/include_crouton_handle" />

    <!-- <ScrollView -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:fillViewport="true" > -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/activityLoginScrollViewLayout" >

            <ImageView
                android:id="@+id/activityLoginLogoIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/desc_activity_login_logo"
                android:scaleType="centerInside"
                android:src="@drawable/login_logo"
                android:visibility="gone" />

            <android.support.v4.view.ViewPager
                android:id="@+id/activityLoginViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

            <com.application.ui.view.CirclePageIndicator
                android:id="@+id/activityLoginCirclePageIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="16dp"
                circlepageindicator:centered="true"
                circlepageindicator:fillColor="@android:color/white"
                circlepageindicator:pageColor="@android:color/transparent"
                circlepageindicator:radius="3dp"
                circlepageindicator:strokeColor="@android:color/white"
                circlepageindicator:strokeWidth="1dp" />
        </FrameLayout>

        <ScrollView
            android:id="@id/activityLoginScrollViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:fillViewport="true" >

            <LinearLayout
                android:id="@+id/rootLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/activityLoginTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:gravity="center"
                        android:text="@string/textview_login"
                        android:textColor="@color/textview_login_color"
                        android:textSize="@dimen/login_textview_size" />

                    <LinearLayout
                        android:id="@+id/activityLoginLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_editbox_height"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_editbox_normal"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:padding="1dp" >

                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="0px"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/activityLoginCountryCodeTv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="start|center"
                            android:layout_weight="2"
                            android:background="@color/edittext_login_background"
                            android:gravity="center"
                            android:text="@string/textview_login_countrycode"
                            android:textColor="@color/textview_login_color"
                            android:textSize="@dimen/login_countrycode_size" />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/activityLoginIdEv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="start|center"
                            android:layout_weight="7"
                            android:background="@android:color/white"
                            android:gravity="start|center"
                            android:hint="@string/hint_login_id"
                            android:inputType="phone"
                            android:imeOptions="actionDone"
                            android:paddingEnd="1dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="1dp"
                            android:paddingStart="4dp"
                            android:textSize="@dimen/login_edittext_size" />

                        <ImageView
                            android:id="@+id/activityLoginValidateIv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:contentDescription="@string/desc_activity_login_validation"
                            android:visibility="gone" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/activityLoginNextBtn1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/shape_button_normal"
                            android:gravity="center"
                            android:text="@string/button_next"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/login_edittext_size"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/activityLoginNextBtn"
                        android:layout_width="@dimen/login_btn_next_width"
                        android:layout_height="@dimen/login_btn_next_height"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_button_normal"
                        android:gravity="center"
                        android:text="@string/button_next"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/login_edittext_size"
                        android:textStyle="bold" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/activityLoginAdminstration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/textview_login_administration"
                        android:textColor="@color/editbox_color"
                        android:textSize="@dimen/login_admin_size" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <!-- </ScrollView> -->

</LinearLayout>