<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
    xmlns:progresswheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_application"
    android:orientation="vertical" >

    <include layout="@layout/toolbar_plain_simple" />

    <include layout="@layout/include_crouton_handle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UselessParent" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_profile_framelayout_height"
                    android:background="@color/background_application" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_profile_framelayout_inner_height"
                        android:background="@color/toolbar_background" >

                        <com.application.ui.view.CircleImageView
                            android:id="@+id/activityEditProfileCircleImageView"
                            android:layout_width="@dimen/edit_profile_circleimageview_height"
                            android:layout_height="@dimen/edit_profile_circleimageview_height"
                            android:layout_gravity="top|center"
                            android:src="@drawable/ic_sample_picture"
                            android:visibility="visible"
                            circleimageview:border_color="@android:color/white"
                            circleimageview:border_width="2dp" />

                        <com.application.ui.view.ProgressWheel
                            android:id="@+id/activityEditProfileProgressWheel"
                            android:layout_width="@dimen/edit_profile_progresswheel_height"
                            android:layout_height="@dimen/edit_profile_progresswheel_height"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            progresswheel:matProg_barColor="@android:color/white"
                            progresswheel:matProg_progressIndeterminate="true" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/activityEditProfileRemoveTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="@dimen/edit_profile_remove_margin_top"
                            android:gravity="center"
                            android:text="@string/textview_upload_remove"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/set_profile_upload_another_size" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/activityEditProfileUploadAnotherIv"
                        android:layout_width="@dimen/edit_profile_upload_imageview_height"
                        android:layout_height="@dimen/edit_profile_upload_imageview_height"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_profile_gallery"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/activityEditProfileNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_editbox_height"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_editbox_normal"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="1dp" >

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activityEditProfileNameEv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_weight="9"
                        android:background="@android:color/white"
                        android:gravity="start|center"
                        android:hint="@string/hint_name"
                        android:inputType="text"
                        android:paddingEnd="1dp"
                        android:imeOptions="actionNext"
                        android:paddingLeft="4dp"
                        android:paddingRight="1dp"
                        android:paddingStart="4dp"
                        android:textSize="@dimen/login_edittext_size" />

                    <ImageView
                        android:id="@+id/activityEditProfileNameValidateIv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:contentDescription="@string/desc_activity_login_validation"
                        android:scaleType="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activityEditProfileEmailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_editbox_height"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_editbox_normal"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="1dp" >

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activityEditProfileEmailEv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_weight="9"
                        android:background="@android:color/white"
                        android:gravity="start|center"
                        android:hint="@string/hint_email_id"
                        android:inputType="textEmailAddress"
                        android:paddingEnd="1dp"
                        android:imeOptions="actionNext"
                        android:paddingLeft="4dp"
                        android:paddingRight="1dp"
                        android:paddingStart="4dp"
                        android:textSize="@dimen/login_edittext_size" />

                    <ImageView
                        android:id="@+id/activityEditProfileEmailValidateIv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:contentDescription="@string/desc_activity_login_validation"
                        android:scaleType="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activityEditProfileEmployeeIdLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_editbox_height"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_editbox_normal"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="1dp" >

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activityEditProfileEmployeeIdEv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_weight="9"
                        android:background="@android:color/white"
                        android:gravity="start|center"
                        android:hint="@string/hint_employee_id"
                        android:inputType="text"
                        android:paddingEnd="1dp"
                        android:imeOptions="actionNext"
                        android:paddingLeft="4dp"
                        android:paddingRight="1dp"
                        android:paddingStart="4dp"
                        android:textSize="@dimen/login_edittext_size" />

                    <ImageView
                        android:id="@+id/activityEditProfileEmployeeIdValidateIv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:contentDescription="@string/desc_activity_login_validation"
                        android:scaleType="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activityEditProfileEmployeeQuestionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_editbox_height"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_editbox_normal"
                    android:clickable="true"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:padding="1dp" >

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activityEditProfileEmployeeQuestionEv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_weight="9"
                        android:background="@android:color/white"
                        android:gravity="start|center"
                        android:hint="@string/activity_edit_profile_question"
                        android:inputType="text"
                        android:paddingEnd="1dp"
                        android:paddingLeft="4dp"
                        android:imeOptions="actionDone"
                        android:paddingRight="1dp"
                        android:paddingStart="4dp"
                        android:textSize="@dimen/login_edittext_size" />

                    <ImageView
                        android:id="@+id/activityEditProfileEmployeeQuestionValidateIv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:contentDescription="@string/desc_activity_login_validation"
                        android:scaleType="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activityEditProfileAnswerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_editbox_height"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_editbox_normal"
                    android:clickable="true"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:padding="1dp" >

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activityEditProfileAnswerEv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_weight="9"
                        android:background="@android:color/white"
                        android:gravity="start|center"
                        android:hint="@string/activity_edit_profile_answer"
                        android:inputType="text"
                        android:paddingEnd="1dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="1dp"
                        android:paddingStart="4dp"
                        android:textSize="@dimen/login_edittext_size" />

                    <ImageView
                        android:id="@+id/activityEditProfileAnswerValidateIv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:contentDescription="@string/desc_activity_login_validation"
                        android:scaleType="center" />
                </LinearLayout>
                
                 <LinearLayout
                    android:id="@+id/activityEditProfileBirthdayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_editbox_height"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_editbox_normal"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:visibility="visible" >

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activityEditProfileBirthdayEv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_weight="9"
                        android:background="@android:color/white"
                        android:editable="false"
                        android:gravity="start|center"
                        android:hint="@string/activity_edit_profile_birthday"
                        android:inputType="text"
                        android:paddingEnd="1dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="1dp"
                        android:paddingStart="4dp"
                        android:textSize="@dimen/login_edittext_size" />

                    <ImageView
                        android:id="@+id/activityEditProfileBirthdayValidateIv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:contentDescription="@string/desc_activity_login_validation"
                        android:scaleType="center" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/activityEditProfileNextBtn"
                    android:layout_width="@dimen/login_btn_next_width"
                    android:layout_height="@dimen/login_btn_next_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/shape_button_normal"
                    android:gravity="center"
                    android:text="@string/activity_edit_profile_update_btn"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/login_edittext_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>