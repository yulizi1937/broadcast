<?xml version="1.0" encoding="utf-8"?>
<com.application.ui.view.ScrimInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:scrim="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerRootLayout"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#80111111"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    scrim:scrimInsetForeground="#4000" >

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white" >

        <com.application.ui.view.MaterialRippleLayout
            android:id="@+id/drawerProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_item_profile_frame_layout_height"
            ripple:mrl_rippleAlpha="@dimen/rippleAlpha"
            ripple:mrl_rippleBackground="@android:color/transparent"
            ripple:mrl_rippleColor="@android:color/white"
            ripple:mrl_rippleHover="true"
            ripple:mrl_rippleOverlay="true" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/toolbar_background" >

                <com.application.ui.view.CircleImageView
                    android:id="@+id/drawerProfileIv"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/drawer_item_profile_image_view_margin_bottom"
                    android:src="@drawable/ic_sample_picture"
                    android:visibility="visible"
                    circleimageview:border_color="@android:color/white"
                    circleimageview:border_width="2dp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/drawerUserNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="@dimen/drawer_item_profile_name_margin_bottom"
                    android:gravity="center"
                    android:text="@string/textview_profile_name"
                    android:textColor="@color/text_highlight"
                    android:textSize="@dimen/drawer_item_profile_name_text_size"
                    tools:ignore="RtlHardcoded" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/drawerUserEmailTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="@dimen/drawer_item_profile_email_margin_bottom"
                    android:gravity="center"
                    android:text="@string/textview_profile_email"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/drawer_item_profile_email_text_size"
                    tools:ignore="RtlHardcoded" />
                
                <ImageView
                    android:id="@+id/drawerProfileCoverIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

            </FrameLayout>
        </com.application.ui.view.MaterialRippleLayout>

        <ListView
            android:id="@+id/drawer_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/drawerProfileLayout"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/drawer_item_height"
            android:background="@android:color/white"
            android:choiceMode="singleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1px"
            android:drawSelectorOnTop="true"
            android:fadingEdge="none"
            android:fitsSystemWindows="true"
            tools:listitem="@layout/item_drawer" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/drawer_item_height"
            android:background="@android:color/darker_gray" />

        <com.application.ui.view.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_item_height"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/drawer_item_padding_left"
            android:paddingRight="@dimen/drawer_item_padding_right"
            ripple:mrl_rippleAlpha="@dimen/rippleAlpha"
            ripple:mrl_rippleBackground="@android:color/transparent"
            ripple:mrl_rippleColor="@android:color/darker_gray"
            ripple:mrl_rippleHover="true"
            ripple:mrl_rippleOverlay="true"
            tools:ignore="RtlHardcoded" >

            <LinearLayout
                android:id="@+id/drawerSyncLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/drawerSyncIv"
                    android:layout_width="@dimen/drawer_item_image_width"
                    android:layout_height="@dimen/drawer_item_image_width"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_drawer_sync"
                    tools:ignore="ContentDescription" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/drawerSyncTitleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="16dp"
                    android:gravity="left|center"
                    android:text="@string/textview_last_sync"
                    android:textColor="@color/toolbar_background"
                    android:textSize="@dimen/drawer_item_last_sync_text_size"
                    tools:ignore="RtlHardcoded" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/drawerSyncContentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="8dp"
                    android:gravity="left|center"
                    android:text="@string/textview_last_sync_content"
                    android:textColor="@color/toolbar_background"
                    android:textSize="@dimen/drawer_item_last_sync_text_size"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
        </com.application.ui.view.MaterialRippleLayout>
    </RelativeLayout>

</com.application.ui.view.ScrimInsetsFrameLayout>