<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragmentFeedbackSelectiveRadioTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/sample_feedback_multiple_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_quiz_selective_quiz_title_size"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_rectange_quiz_box"
            android:padding="1dp" >

            <RadioGroup
                android:id="@+id/fragmentFeedbackSelectionRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent" >

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/fragmentFeedbackSelectionRadioButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/fragment_quiz_selective_quiz_option_padding"
                    android:text="@string/sample_quiz_multiple_check_group_a"
                    android:textColor="@color/drawer_item_title"
                    android:textSize="@dimen/fragment_quiz_selective_quiz_option_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/drawer_item_title" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/fragmentFeedbackSelectionRadioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/fragment_quiz_selective_quiz_option_padding"
                    android:text="@string/sample_quiz_multiple_check_group_b"
                    android:textColor="@color/drawer_item_title"
                    android:textSize="@dimen/fragment_quiz_selective_quiz_option_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/drawer_item_title" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/fragmentFeedbackSelectionRadioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/fragment_quiz_selective_quiz_option_padding"
                    android:text="@string/sample_quiz_multiple_check_group_c"
                    android:textColor="@color/drawer_item_title"
                    android:textSize="@dimen/fragment_quiz_selective_quiz_option_size"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/drawer_item_title" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/fragmentFeedbackSelectionRadioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/fragment_quiz_selective_quiz_option_padding"
                    android:text="@string/sample_quiz_multiple_check_group_d"
                    android:textColor="@color/drawer_item_title"
                    android:textSize="@dimen/fragment_quiz_selective_quiz_option_size"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/drawer_item_title" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/fragmentFeedbackSelectionRadioButton5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/fragment_quiz_selective_quiz_option_padding"
                    android:text="@string/sample_quiz_multiple_check_group_d"
                    android:textColor="@color/drawer_item_title"
                    android:textSize="@dimen/fragment_quiz_selective_quiz_option_size"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/drawer_item_title" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/fragmentFeedbackSelectionRadioButton6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/fragment_quiz_selective_quiz_option_padding"
                    android:text="@string/sample_quiz_multiple_check_group_d"
                    android:textColor="@color/drawer_item_title"
                    android:textSize="@dimen/fragment_quiz_selective_quiz_option_size"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/drawer_item_title" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/fragmentFeedbackSelectionRadioButton7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/fragment_quiz_selective_quiz_option_padding"
                    android:text="@string/sample_quiz_multiple_check_group_d"
                    android:textColor="@color/drawer_item_title"
                    android:textSize="@dimen/fragment_quiz_selective_quiz_option_size"
                    android:visibility="gone" />
            </RadioGroup>
        </FrameLayout>
    </LinearLayout>

</ScrollView>