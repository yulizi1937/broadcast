<resources>

     <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>
    
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/drawer_item_title</item>
        <item name="colorControlNormal">@color/drawer_item_title</item>
        <item name="colorControlHighlight">@color/drawer_item_title</item>
        <item name="colorSwitchThumbNormal">@color/drawer_item_title</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/toolbar_background</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/toolbar_background_statusbar</item>

        <!-- colorAccent is used as the default value for colorControlActivated, which is used to tint widgets -->
        <item name="colorAccent">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="actionModeBackground">@color/toolbar_background</item>
    </style>
    <style name="SPB" parent="android:Widget.Material.ProgressBar.Horizontal">
    </style>

</resources>